<h1>Editing role</h1>

<% form_for(@role) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :recipes %><br />
    <%= f.text_field :recipes %>
  </p>
  <p>
    <%= f.label :platform %><br />
    <%= f.text_field :platform %>
  </p>
  <p>
	<%= select(:recipes_role, :recipe_id, Recipe.all.collect() {|r| [r.name, r.id]} , {}, {:multiple => true, :size => 5} ) %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @role %> |
<%= link_to 'Back', roles_path %>