<h1>Listing roles</h1>

<table border=1 cellpadding=3 cellspacing="0">
  <tr bgcolor="#FFCCFF">
    <th>Name</th>
    <th>Description</th>
    <th>Recipes</th>
    <th>Platform</th>
  </tr>

<% @roles.each do |role| %>
  <tr class="data_row">
    <td><%=h role.name %></td>
    <td><%=h role.description %></td>
    <td><%=h role.recipes.inspect %></td>
	<td><%=h role.platform %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role_path(role), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New role', new_role_path %>